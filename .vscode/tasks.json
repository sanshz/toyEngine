{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build (dev)",
      "command": "cl.exe",
      "args": [
        "/Zi", "/EHsc", "/nologo", "/MDd",
        "/I${workspaceFolder}\\src\\private\\",
        "/I${workspaceFolder}\\src\\public\\",
        "/I${workspaceFolder}\\include\\",
        "${fileDirname}\\**",
        "/Fe${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
        "/std:c++latest",
        "/link",
        "/LIBPATH:${workspaceFolder}\\libs\\",
        "glfw3.lib", "opengl32.lib",
        "gdi32.lib", "user32.lib", "shell32.lib"
      ],
      "options": {
        "cwd": "${workspaceFolder}\\bin\\intermediates\\"
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
